{
  "env": {
    "dev": {
      "base": "./source/",
      "dest": "./build/"
    },
    "prod": {
      "base": "./source/",
      "dest": "./build/"
    }
  },
  "sourceFiles": {
    "js": "**/*.js",
    "css": "**/*.css",
    "html": "**/*.{html,htm}",
    "images": "images/**/*.{gif,png,jpeg,jpg,svg}",
    "zip": ["./build/**/*"],
    "index": "index.html",
    "templates": ["**/*.html", "!index.html"]
  },
  "targetFolders": {
    "js": "",
    "css": "",
    "html": "",
    "images": "images/",
    "revManifest": "./source/",
    "reports": "./reports",
    "zip": "./zip/",
    "templates": "templates/"
  },
  "targetFiles": {
    "css": "app.css",
    "revManifest": "rev-manifest.json",
    "zip": null,
    "index": "index.html",
    "templates": "templates.js"
  },
  "watchFiles": {
    "css": "**/*.{css,scss,sass}",
    "js": ["**/*.js", "!templates/*.js"],
    "html": ["**/*.html", "!index.html"],
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}"
  },
  "assets": [
    {
      "name": "Icon",
      "searchPattern": "**/*.ico",
      "folderFrom": "./source/",
      "folderTo": ""
    },
    {
      "name": "Font-awesome",
      "searchPattern": "**/*.{otf,eot,svg,ttf,woff,woff2}",
      "folderFrom": "./bower_components/font-awesome/fonts/",
      "folderTo": "fonts"
    },
    {
      "name": "Weather-icons",
      "searchPattern": "**/*.{otf,eot,svg,ttf,woff,woff2}",
      "folderFrom": "./bower_components/weather-icons/font/",
      "folderTo": "font"
    }
  ]
}
